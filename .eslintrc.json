{
    "extends": ["prettier", "airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "env": {
        "node": true
    },
    "plugins": ["prettier", "import"],
    "rules": {
        "operator-linebreak": 0,
        "import/extensions": 0,
        "consistent-return": 0,
        "func-names": 0,
        "comma-dangle": 0,
        "no-console": 0,
        "indent": 0,
        "linebreak-style": 0,
        "new-cap": 0,
        "object-curly-newline": 0,
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100,
                "tabWidth": 4,
                "endOfLine": "auto",
                "semi": true
            }
        ]
    }
}
